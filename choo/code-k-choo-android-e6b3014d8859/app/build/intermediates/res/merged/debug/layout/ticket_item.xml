<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3b7b8">
    <LinearLayout
        android:id="@+id/submissionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"


        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/choono"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#b3b7b8"
                android:layout_height="wrap_content"
                android:text="@string/choono"/>
            <TextView
                android:id="@+id/currentdate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#b3b7b8"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="03.08.15"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#b3b7b8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/desttext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#b3b7b8"
                android:layout_height="wrap_content"
                android:text="@string/dest"/>
            <TextView
                android:id="@+id/dest"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/delaytext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#b3b7b8"
                android:layout_height="wrap_content"
                android:text="@string/delay"/>
            <TextView
                android:id="@+id/delay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tickettriptext"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#b3b7b8"
                android:layout_height="wrap_content"
                android:text="@string/tickettripprice"/>
            <TextView
                android:id="@+id/pricetype"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:gravity="right"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#b3b7b8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/submittext"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="@string/status"/>
            <TextView
                android:id="@+id/submitnow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/statecolor"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/submitimage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/stateiicon"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/E:/Choo%2011-03-16/code-k-choo-android-e6b3014d8859/app/src/main/res/layout/ticket_item.xml -->