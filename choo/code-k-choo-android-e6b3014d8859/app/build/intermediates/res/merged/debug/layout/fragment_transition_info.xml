<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.chooapp.fragments.RefundCheck"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@color/app_theme_light"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/transition"/>
            <TextView
                android:id="@+id/heading"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transitioninfo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/app_theme"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subline1"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="@string/heading1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/traintypetext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/traintype"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/traintype"
                android:layout_width="0dp"
                android:textColor="@color/app_theme"
                android:layout_weight="1"
                android:gravity="right"
                android:text="ICE"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_below="@+id/type"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/trainnumtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/trainnumber"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/trainnumvalue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:gravity="right"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:ellipsize="end"
                android:textSize="14sp"
                android:maxLength="5"
                android:digits="0123456789"
                android:inputType="number"
                android:background="#00000000"
                android:textColor="@color/app_theme"
                android:layout_height="wrap_content"
                android:hint="@string/delayedtrain"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_below="@+id/num"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/dtplannedtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/planneddeparture"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dtplanned"
                android:layout_width="0dp"
                android:background="#00000000"
                android:textColor="@color/app_theme"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            <ListView
                android:id="@+id/stationlist"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:visibility="gone"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="true"
                android:layout_height="150dp"/>
            <ListView
                android:id="@+id/stationlist1"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:isScrollContainer="false"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                android:layout_height="150dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/app_theme"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subline2"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="@string/heading2"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/selectStationtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/station"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/selectStation"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:singleLine="true"
                android:gravity="right"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                android:imeOptions="actionDone"
                android:background="#00000000"
                android:textColor="@color/app_theme"
                android:layout_height="wrap_content"
                android:hint="@string/missedconnecttrain"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/transitionStationtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/lasttransition"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/transitionStation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="right"
                android:textSize="14sp"
                android:cursorVisible="true"
                android:textCursorDrawable="@null"
                android:imeOptions="actionDone"
                android:background="#00000000"
                android:textColor="@color/app_theme"
                android:layout_height="wrap_content"
                android:hint="@string/transitionstation"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/left"/>
        <ImageView
            android:id="@+id/progress2"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/progress_bar2"/>
        <ImageView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right"/>
    </LinearLayout>
</RelativeLayout>
