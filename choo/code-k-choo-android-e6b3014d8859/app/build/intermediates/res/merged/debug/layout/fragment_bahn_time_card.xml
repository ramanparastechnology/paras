<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.chooapp.fragments.RefundCheck"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@color/app_theme_light"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/card_in_use"/>
            <TextView
                android:id="@+id/heading"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bahntimecard"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/app_theme"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subline1"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:text="@string/bahnhead1"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/cardtypetext"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="@string/typeofcard"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cardtype"
                    android:layout_width="0dp"
                    android:textColor="@color/app_theme"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="BahnCard100"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/classtypetext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/clas"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/classtype"
                android:layout_width="0dp"
                android:textColor="#309DC5"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1. Class"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/cardnumlayout"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/cardnumtext"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="@string/cardnumber"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/cardnumvalue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:maxLength="18"
                    android:textSize="14sp"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:background="#00000000"
                    android:textColor="@color/app_theme"
                    android:layout_height="wrap_content"
                    android:hint="(max. 18)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/expDatetext"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:text="@string/expdate"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/expDate"
                    android:layout_width="0dp"
                    android:textColor="@color/app_theme"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/dateofbirthtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="@string/dob"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dateofbirth"
                android:layout_width="0dp"
                android:textColor="@color/app_theme"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="right"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/left"/>
        <ImageView
            android:id="@+id/progress3"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/progress_bar3"/>
        <ImageView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/right"/>
    </LinearLayout>
</RelativeLayout>
